/**app.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.ad_popError {
    position: fixed;
    min-width: 300rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    color: #eaeaea;
    background: rgba(0, 0, 0, .7);
}
.border-top {
    border-top: 1px solid #eee;
}
.border-bottom {
    border-bottom: 1rpx solid #eee;
}

.border-left {
    border-left: 1px solid #eee;
}

.border-right {
    border-right: 1px solid #eee;
}
.wxParse image {
    width: 100% !important;
}